<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/dark</item>
        <item name="colorAccent">@color/purple</item>
        <item name="android:windowBackground">@color/darkBlack</item>
        <item name="android:textColor">@color/light</item>
        <item name="android:buttonStyle">@style/button</item>
        <item name="android:fontFamily">@font/roboto_mono_light</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="button" parent="Base.Widget.AppCompat.Button">
        <item name="android:color">@color/light</item>
        <item name="android:background">@color/dark</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:layout_margin">@dimen/margin</item>
    </style>
</resources>
